  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\CompanyName.ProjectName.HttpApi.Client\CompanyName.ProjectName.HttpApi.Client.csproj" />
  </ItemGroup>

</Project>
